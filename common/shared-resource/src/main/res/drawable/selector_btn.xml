<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--disabled-->
    <item android:drawable="@drawable/btn_disabled" android:state_enabled="false" android:state_pressed="false" android:textColor="@color/md_theme_onPrimary" />
    <!--pressed-->
    <item android:drawable="@drawable/btn_primary_pressed" android:state_enabled="true" android:state_pressed="true" android:textColor="@color/md_theme_onPrimary" />
    <!--hovered-->
    <item android:drawable="@drawable/btn_primary_hovered" android:state_enabled="true" android:state_pressed="false" android:state_hovered="true" android:textColor="@color/md_theme_onPrimary" />
    <!--default-->
    <item android:drawable="@drawable/btn_primary_default" android:state_enabled="true" android:state_pressed="false" android:textColor="@color/md_theme_onPrimary" />
</selector>